# Mattermost Configuration
MATTERMOST_URL=https://your-mattermost-server.com
MATTERMOST_API_TOKEN=your-api-token-here
MATTERMOST_TEAM_NAME=your-team-name
MATTERMOST_CHANNEL_NAME=your-channel-name

# File Paths
WHATSAPP_CHAT_FILE="/path/to/your/whatsapp/chat/export.txt"
IMPORT_ZIP_PATH="/path/to/save/import.zip"

# User Mappings (format: "Display Name"="@username")
# You can add multiple users separated by semicolons
USER_MAPPINGS='"WhatsApp Display Name"="mattermost_username";"Another User"="another_username"'

# Phone Number Mappings (format: "phone_number"="@username")  
# You can add multiple phone numbers with country codes separated by semicolons
PHONE_MAPPINGS='"905555555"="username1";"905555556"="username2"'

# Message Processing Settings
# Maximum message length before splitting (default: 16000, Mattermost limit is 16383)
MAX_MESSAGE_LENGTH=16000
